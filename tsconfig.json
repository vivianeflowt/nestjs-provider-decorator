{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "noLib": false,
    "lib": [
      "es7"
    ],
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "declarationDir": "lib",
    "outDir": "lib",
    "types": [
      "node",
      "jest"
    ]
  },
  "files": [
    "typings/jest-extended.d.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}